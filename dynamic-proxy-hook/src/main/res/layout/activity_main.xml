    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.dynamic_proxy_hook.hook.MainActivity">

    <Button
        android:id="@+id/btn_hook_context_startActivity"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hook Context类的startActivity"
       />

    <Button
        android:id="@+id/btn_hook_Activity_startActivity"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hook Activity类的startActivity"
       />

</LinearLayout>
